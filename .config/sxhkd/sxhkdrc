#super + {_,shift + }Tab
	#bspc {desktop,node } -f last.local

# focus the last desktop
super + Tab
	bspc desktop -f last.local

    # focus the next node on the desktop
super + shift + Tab
	bspc node -f next.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


