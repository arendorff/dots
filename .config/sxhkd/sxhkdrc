# EXTRA KEYS

XF86AudioMute
       pactl set-sink-mute 0 toggle
        #amixer sset Master toggle

XF86AudioLowerVolume
        sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 -5%"
		#amixer set Master 5%-

XF86AudioRaiseVolume
        sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 +5%"
		#amixer set Master 5%+

XF86WLAN
        wifitoggle.fish

XF86MonBrightnessDown
	      brightnessctl set 5%-

XF86MonBrightnessUp
	      brightnessctl set +5%

XF86Display
             brightnessctl set 1%
#XF86MonBrightnessDown
